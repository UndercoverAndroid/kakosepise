<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"

        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"

        android:text="@string/loginText"
        android:id="@+id/button_login"/>

    <EditText
        android:id="@+id/text_field_username"
        android:layout_width="220dp"

        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/text_field_password"
        android:layout_centerHorizontal="true"

        android:hint="@string/usernameText"
        android:importantForAutofill="no"

        android:inputType="text"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/text_field_password"
        android:layout_width="220dp"

        android:layout_height="40dp"

            android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_login"

        android:layout_marginTop="52dp"
        android:layout_marginBottom="51dp"
        android:hint="@string/passwordString"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColorHint="@color/colorAccent" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_field_username"
        android:id="@+id/list_view"/>

</RelativeLayout>